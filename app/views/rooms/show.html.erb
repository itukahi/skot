<h1>自由に話そう</h1>

<div id ="messages">
  <% @chats.each do |message| %>
    <% if message.user_id == current_user.id %>
    <div class=me>
    <% else %>
    <div class=you>
    <% end %>
    <%= render "message", message: message %></div>
  <% end %>
</div>
<form>
  <label>お話しして🍞:</label><br>
  <input type="text" data-behavior="room_speaker">
  <%= hidden_field_tag :target_id, @target_id %>
  <%= hidden_field_tag :current_user, current_user.id %>
  </form>