<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>アカウント名</th>
      <th>名前</th>
      <th>ふりがな</th>
      <th>学年</th>
      <th>クラス</th>
      <th>番号</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.account %></td>
        <td><%= user.name %></td>
        <td><%= user.hurigana %></td>
        <td><%= user.grade %></td>
        <td><%= user.klass %></td>
        <td><%= user.number %></td>
        <% if current_user.id == user.id %>
        <td><%= link_to '見る', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td></td>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

