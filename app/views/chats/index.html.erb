<p id="notice"><%= notice %></p>

<h1>チャット</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Target</th>
      <th>Contents</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.user_id %></td>
        <td><%= chat.target_id %></td>
        <td><%= chat.contents %></td>
        <td><%= chat.time %></td>
        <td><%= link_to 'Show', chat %></td>
        <td><%= link_to 'Edit', edit_chat_path(chat) %></td>
        <td><%= link_to 'Destroy', chat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいチャット', new_chat_path %>
