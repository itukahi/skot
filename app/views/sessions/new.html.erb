<h1>Sessions#new</h1>
<p>Find me in app/views/sessions/new.html.erb</p>

<h1>Log in</h1>

<% if flash[:notice] %>
  <p><%= flash[:notice] %><p>
<% end %>

<% if flash[:danger] %>
  <p><%= flash[:danger] %><p>
<% end %>

<div>
  <div>
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label "アカウント" %>
        <%= f.text_field :account %>

        <%= f.label "パスワード" %>
        <%= f.password_field :password %>

        <%= f.submit "Log in" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!",signup_path %></p>
  </div>
</div>