<div id="contents"> 
<h1>SKOTへようこそスコー</h1>


<% if flash[:notice] %>
  <p><%= flash[:notice] %><p>
<% end %>

<% if flash[:danger] %>
  <p><%= flash[:danger] %><p>
<% end %>

<div>
  <div>
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label "アカウント" %>
        <%= f.text_field :account %>

        <%= f.label "パスワード" %>
        <%= f.password_field :password %>
        <br>
        <br>
        <%= f.submit "ログイン" %>
    <% end %>

    <%= link_to "新規作成",signup_path %>
  </div>
</div>
</div>