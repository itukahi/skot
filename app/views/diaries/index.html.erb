<p id="notice"><%= notice %></p>

<h1>日誌</h1>

<table>
  <thead>
    <tr>
      <th>作成者</th>
      <th>タイトル</th>
      <th>本文</th>
      <th>作成時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diaries.each do |diary| %>
      <tr>
        <td><%= diary.user.name %></td>
        <td><%= diary.diarytitle.title %></td>
        <td><%= diary.contents %></td>
        <td><%= diary.time %></td>
        <td><%= link_to '詳細', diary %></td>
        <% if current_user.id == diary.user_id %>
        <td><%= link_to '編集', edit_diary_path(diary) %></td>
        <td><%= link_to '削除', diary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td></td>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

