<p id="notice"><%= notice %></p>

<h1>Diary Coments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Coments</th>
      <th>Diary</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diary_coments.each do |diary_coment| %>
      <tr>
        <td><%= diary_coment.user_id %></td>
        <td><%= diary_coment.coments %></td>
        <td><%= diary_coment.diary_id %></td>
        <td><%= diary_coment.time %></td>
        <td><%= link_to 'Show', diary_coment %></td>
        <td><%= link_to 'Edit', edit_diary_coment_path(diary_coment) %></td>
        <td><%= link_to 'Destroy', diary_coment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

