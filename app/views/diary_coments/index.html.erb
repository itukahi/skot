<p id="notice"><%= notice %></p>

<h1>日誌コメント</h1>

<table>
  <thead>
    <tr>
      <th>作成者</th>
      <th>内容</th>
      <th>日誌番号</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diary_coments.each do |diary_coment| %>
      <tr>
        <td><%= diary_coment.user_id %></td>
        <td><%= diary_coment.coments %></td>
        <td><%= diary_coment.diary_id %></td>
        <td><%= diary_coment.time %></td>
        <td><%= link_to '詳細', diary_coment %></td>
        <td><%= link_to '編集', edit_diary_coment_path(diary_coment) %></td>
        <td><%= link_to '削除', diary_coment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

